{
  // Set Prettier as the default formatter for all languages
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Enable format on save
  "editor.formatOnSave": true,

  // Specific settings for HTML
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // Additional language-specific settings can be added here
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Prettier configuration options
  "prettier.arrowParens": "avoid",
  "prettier.bracketSameLine": true,
  "prettier.bracketSpacing": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.htmlWhitespaceSensitivity": "ignore", // Consider ignoring whitespace sensitivity for Angular templates
  "prettier.insertPragma": false,

  // Additional settings for Angular templates
  "angular.enableTemplateFormat": true // If supported by your extensions
}
